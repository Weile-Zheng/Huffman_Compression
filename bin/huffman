#!/bin/bash

path="/Users/weilezheng/desktop/Huffman_Coding/src"
class="/Users/weilezheng/desktop/Huffman_Coding/src/HuffmanMain"
default_encode_name="encode.enc"
default_decode_name="decode.txt"

compress(){
    echo "comp"
    java -cp $path HuffmanMain encode $1 $default_encode_name
    #java -cp [path] [main.java] [Encode/Decode] [File to be Compressed] [Compression Name ]

}

decompress(){
    echo "decomp"
    java -cp $path HuffmanMain decode $1 $default_decode_name
}


if [ "$3" == "-o" ]; then
default_encode_name="$4"
default_decode_name="$4"
fi 

file="$2"

if [ "$1" == "-compress" ]; then 
compress $file

elif [ "$1" == "-decompress" ]; then 
decompress $file
rm .frequency.txt 

fi


